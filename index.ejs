<body>
  <div class="newmain">
    <div class="logo-container">
      <img class="logo" src="https://www.sastra.edu/cbcs/cbcs_tm2020/images/sastralogo.png" alt="SASTRA LOGO" />
    </div>


    <h2 id="current-time" class="clock">Time: 12:00:00</h2>


    <div class="main">
      <div class="register">
        <div class="header">
          <h2>SASTRA Student Home-Roll call attendance</h2>
        </div>
        <div class="forms">
          <form action="" id="register" method="post">
            <label for="rno">Registration number: </label>

            <input type="text" name="rno" id="regnum" size="50rem" minlength="9" maxlength="9"
              placeholder="Enter your Registration number" />
            <br /><br />
            <label for="gender" style="margin: auto 100px auto auto">Gender</label>
            <input type="radio" name="gender" id="male" value="male" /> Male
            <input type="radio" name="gender" id="female" value="female" />
            Female <br /><br />
            <label for="hostels" style="margin: auto 50px auto auto">Select hostel:</label>

            <select name="hostels" id="hostel">
              <option value="bvn1">Vinaya1</option>
              <option value="bvn2">Vinaya2</option>
              <option value="bvn3">Vinaya3</option>
              <option value="bkd1">Kamadhenu</option>
              <option value="bvsht">Vashishta</option>
              <option disabled="true" value="bav">Ananda Vihar</option>
              <option disabled="true" value="bkd2">Kamadhenu Annex</option>
              <option disabled="true" value="bpv">Paramananda Vihar</option>
              <option disabled="true" value="brlv">Rajalakshmi Vihar</option>

              <option value="gsn1">Sadananda New</option>
              <option value="gsn2">Sadananda Old</option>
              <option value="gsn3">Sadananda Annex</option>
              <option value="gar">Arundhati</option>
              <option value="gan">Anasuya</option>
              <option value="gah">Ahalya</option>
              <option value="gsps">Sandipani Sadan</option>
            </select>
            <div class="submitbuttons text-center">
              <input type="submit" onclick="showAlert()" class="btn btn-primary button" value="Submit" />
              <input type="reset" class="btn btn-secondary" value="Reset" />
            </div>
          </form>
        </div>
      </div>
      <!--end of register-->
      <br />
    </div>
    <!--end of main-->
  </div>
</body>
<script>
  function showAlert() {
    let a = document.getElementById("regnum").value;
    let c = parseInt(a);
    let b =
      document.getElementById("male").checked ||
      document.getElementById("female").checked;
    if (a == "") {
      alert("Enter your registration number");
    } else if (!b) {
      alert("Select gender");
    } else {
      alert("Attendance successfully registered ");
    }
  }

  function formatTime(timeString) {
    const [hourString, minute] = timeString.split(":");
    const hour = +hourString % 24;
    return (hour % 12 || 12) + ":" + minute + (hour < 12 ? "AM" : "PM");
  }
  let time = document.getElementById("current-time");

  setInterval(() => {
    let d = new Date();
    time.innerHTML = "Time: " + formatTime(d.toLocaleTimeString());
  }, 1000);
</script>

</html>